@model List<CI_Project.Entities.ViewModels.CommentModel>
@if (Model.Count > 0)
{
	<div class="volunteer-comments-container-div p-2">


		@foreach (var currComment in Model)
		{
			<div class="d-flex align-items-center bg-white rounded-3 p-2 mb-2">
				@if (currComment.User.Avatar != null)
				{
					<div class="me-3"><img class="avtar" src="@currComment.User.Avatar" alt=""></div>
				}
				else
				{
					<div class="me-3"><img class="avtar" src="~/images/404-Page-image.png" alt=""></div>
				}
				<div class="d-flex flex-column w-100 justify-content-between">
					<div class="p-0 mb-2">
						<p class="p-0 m-0 fw-semibold lh-1 ">@currComment.User.FirstName @currComment.User.LastName</p>
						<p class="p-0 m-0 ">
							@currComment.CreatedAt.DayOfWeek,@currComment.CreatedAt.ToString("MMMM") @currComment.CreatedAt.Day,@currComment.CreatedAt.Year,@currComment.CreatedAt.ToString("hh:mm tt")
						</p>
					</div>
					<div class="volunteer-comment ">@currComment.CommentText</div>
				</div>
			</div>
		}


	</div>
}
else
{
	<div class="d-flex justify-content-center align-items-center h-100 w-100 m-0 bg-white">
		<h2>No comments yet</h2>
	</div>
}
