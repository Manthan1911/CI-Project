	<div class="flex-grow-1 admin-right">
		<nav id="adminPageNavbar" class="d-flex justify-content-between align-items-center py-1 px-3 shadow-sm">
			<div class="d-flex gap-3 align-items-center">
				<img src="~/images/list.png" alt="list" class="hamburger d-xl-none cursor-pointer">
				<span id="currentTime" class="color-darkgray text-15"></span>
			</div>
			<div class="dropdown flex-shrink-0">
				<button class="btn dropdown-toggle d-flex align-items-center gap-2 color-darkgray fw-light"
						type="button" data-bs-toggle="dropdown" aria-expanded="false">
					<img src='~/images/user-img.png' alt="profile" class="rounded-circle object-fit-cover"
						 width="40px" height="40px">
					<span class="d-none d-md-inline">@FullName </span>
					<img src="~/images/drop-down.png" alt="drop-down">
				</button>
				<ul class="dropdown-menu dropdown-menu-end dropdown-menu-md-start">
					<li>
						<a class="dropdown-item" id="myprofileBtn" asp-action="AdminProfile" asp-controller="Home"
						   asp-route-userId="@userId">My Profile</a>
					</li>
					<li><a id="logoutBtn" class="dropdown-item">Logout</a></li>
				</ul>
			</div>
		</nav>
		<section class="py-4 px-3 overflow-y-auto" id="adminPagePartialContainer">
			<div id="loader" class="d-flex align-items-center justify-content-center h-100 w-100">
				<img src="~/images/preloader.gif"/>
			</div>
		</section>
	</div>
</main>
