                        <div class="notification-setting-title-div fw-semibold text-secondary px-2 ">
                            Get a notification for
                        </div>
                        <div id="notificationSettingsContainerDiv" class="container p-0 ">
                            <div class="row mx-1 py-2">
                                <label class="col-10 col-sm-11 ">Recommended Mission</label>
                                <div class="col-2 col-sm-1 d-flex justify-content-center align-items-center">
                                    <input type="checkbox" style="height:20px;width:20px;" />
                                </div>
                            </div>
                            <div class="row mx-1 py-2">
                                <label class="col-10 col-sm-11 ">Volunteering Hours</label>
                                <div class="col-2 col-sm-1 d-flex justify-content-center align-items-center">
                                    <input type="checkbox" style="height:20px;width:20px;" />
                                </div>
                            </div>
