@model CI_Project.Entities.ViewModels.CmsModel

<div class="border-bottom border-2">
	<span class="heading-2 text-decoration-underline" style="text-underline-offset:10px;">Add Cms</span>
</div>

<form id="addCmsForm" class="mt-4 px-3">
	<div class="row">
		<label class="p-0 m-0">Title</label>
		<input id="cmsTitle" asp-for="Title" type="text" class="p-2 rounded-3 border border-2" />
		<span class="test-danger" asp-validation-for="Title"></span>
	</div>
	<div class="row">
		<label class="p-0 m-0">Description</label>
		<textarea name="description" id="tiny"></textarea>
		<span class="test-danger" asp-validation-for="Description"></span>
	</div>
	<div class="row">
		<label class="p-0 m-0">Slug</label>
		<input id="cmsSlug" asp-for="Slug" type="text" class="p-2 rounded-3 border border-2 " />
		<span class="test-danger" asp-validation-for="Slug"></span>
	</div>
	<div class="row">
		<label class="p-0 m-0">Status</label>
		<select id="cmsStatus" asp-for="Status" class="p-2 rounded-3 border border-2 ">
			<option value="true">Active</option>
			<option value="false">Inactive</option>
		</select>
		<span class="test-danger" asp-validation-for="Status"></span>
	</div>
	<div class="d-flex align-items-center justify-content-end mt-4">
		<button type="button" id="addCmsCancelBtn" class="btn btn-outline-danger btn-lg rounded-pill me-3">Cancel</button>
		<button type="submit" class="btn btn-outline-warning btn-lg rounded-pill">Save</button>
	</div>
</form>

<partial name="_ValidationScriptsPartial"></partial>