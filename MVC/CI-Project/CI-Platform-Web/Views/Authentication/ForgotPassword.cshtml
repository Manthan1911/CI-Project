@model CI_Project.Entities.ViewModels.ForgotPasswordModel

@{
    ViewData["Title"] = "ForgotPassword Page";
}

@section Styles {
    <link rel="Stylesheet" href="@Href("~/css/style.css")" />
}



<div class="loginPage-main-div d-flex">
    @Html.Partial("_authenticationCarousel",Model.BannerImages);
    <div class="loginPage-form-div d-flex flex-column align-items-center justify-content-center">
        <form asp-action="ForgotPassword" class="d-flex flex-column flex-grow-1 justify-content-center w-75">
            <div class="d-flex justify-content-center">
                <h2>Forgot Password</h2>
            </div>
            <div class="d-flex justify-content-center">
                <p class="text-center p-3">
                    Enter your email address you've using for your account below and we will
                    send
                    you a password
                    reset link
                </p>
            </div>
            <div class="d-flex flex-column mb-4">
                <label asp-for="EmailId">Email Address</label>
                <input asp-for="EmailId" class="p-2" type="email" id="emailAddress" 
                       placeholder="email address">
                <span asp-validation-for="EmailId" class="text-danger"></span>
            </div>
            <div class="d-flex flex-column align-items-center ">
                <input type="submit" class="login-btn w-100 p-2 rounded-5 border border-2 bg-white mb-3" value="Reset my Password">

                <a class="mb-3 text-black" asp-action="Login">
                    Login
                </a>
            </div>
        </form>
        <a class="mb-5 text-black" href="">Privacy Policy</a>
    </div>
</div>
