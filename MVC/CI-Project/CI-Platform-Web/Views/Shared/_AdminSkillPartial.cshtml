@model List<CI_Project.Entities.ViewModels.SkillModel>

<style>
	.table-overflow {
		width: 100%;
		white-space: nowrap;
		overflow-x: auto;
	}

	th {
		font-weight: 500;
		font-size: 1.25rem !important;
		padding: 1rem 1rem !important;
		background-color: #edeff6 !important;
	}

	.table thead > tr > th {
		border-bottom-color: #ced4da !important;
	}

	.table tbody > tr > td {
		padding-left: 1rem !important;
		padding-top: 0.75rem;
		padding-bottom: 0.75rem;
	}

</style>


<div>
	<div class="border-bottom border-2">
		<span class="heading-2 text-decoration-underline" style="text-underline-offset:10px;">Skill</span>
	</div>
	<div class="p-0 m-0 mt-4">
		<div class="row">
			<div class="col-5">
				<div class=" h-100">
					<input id="adminSearch" type="text" placeholder="search" class="h-100 search-input rounded-3 border border-2" />
				</div>
			</div>
			<div class="col-7 d-flex justify-content-end">
				<button id="addSkillBtn" class="btn btn-outline-warning btn-lg border-warning rounded-pill" style="min-width:max-content;">
					<span class="mx-2">+</span>
					<span class="mx-2">Add</span>
				</button>
			</div>
		</div>
		<div class="table-overflow">
			<table class="table mt-5 ">
				<thead>
					<tr>
						<th>Name</th>
						<th>Status</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					@if (Model.Count() == 0)
					{
						<tr>
							<td colspan="100%">
								<div class="text-center">No entries found.</div>
							</td>
						</tr>
					}
					else
					{
						foreach (var currSkill in Model)
						{
							<tr>
								<td>@currSkill.SkillName</td>
								<td>
									@if (@currSkill.Status == 1)
									{
										<span class="text-warning fw-semibold">Active</span>
									}
									else
									{
										<span class="text-danger fw-semibold">InActive</span>
									}
								</td>
								<td>
									@*----------- Active CMS --------*@
									@if (currSkill.Status == 1)
									{
										<div class="d-flex gap-2">
											<img src="~/images/editing.png"
									 class="editSkillBtn cursor-pointer" alt="edit" height="20px" width="20px" data-skillId="@currSkill.SkillId">

											<img src="~/images/bin.png"
									 class="deleteSkillBtn cursor-pointer" alt="bin" height="20px" width="20px" data-skillId="@currSkill.SkillId">
										</div>
									}
									else
									{
										<div class="d-flex gap-2">
											<img src="~/images/editing.png"
									 class="editSkillBtn cursor-pointer" alt="edit" height="20px" width="20px" data-skillId="@currSkill.SkillId">

											<img src="~/images/restore.svg" class="restoreSkillBtn cursor-pointer" alt="bin" height="20px" width="20px"
									 data-skillId="@currSkill.SkillId">
										</div>
									}
								</td>
							</tr>
						}
					}
				</tbody>
			</table>
		</div>
	</div>
	<div class="pagination c-pagination-item mt-2 d-flex justify-content-center justify-content-md-end gap-2" id="pagination-container">
	</div>
</div>

