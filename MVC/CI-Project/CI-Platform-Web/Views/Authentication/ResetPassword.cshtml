@model CI_Project.Entities.ViewModels.ResetPasswordModel
@{
    ViewData["Title"] = "ResetPassword";
}

<div class="loginPage-main-div d-flex">
    @Html.Partial("_authenticationCarousel");
    <div class="loginPage-form-div d-flex flex-column align-items-center justify-content-center">
        <form asp-action="ResetPassword" class="d-flex flex-column flex-grow-1 justify-content-center w-75">
            <div class="d-flex justify-content-center">
                <h2>New Password</h2>
            </div>
            <div class="d-flex justify-content-center">
                <p class="text-center p-3">Please enter a new password in the fields below.</p>
            </div>
            <div class="d-flex flex-column mb-4">
                <label asp-for="NewPassword">New Password</label>
                <input asp-for="NewPassword" class="p-2" type="password" id="newPassword" value="1111111111" placeholder="New Password">
                <span asp-validation-for="NewPassword"></span>
            </div>
            <div class="d-flex flex-column mb-4">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="p-2" type="password" id="confirmPassword" value="1111111111"
                       placeholder="Confirm Password">
                <span asp-validation-for="ConfirmPassword"></span>
                <input type="text" asp-for="token" value="@Model.token"/>
            </div>
            <div class="d-flex flex-column align-items-center ">
                <button type="submit" class="login-btn w-100 p-2 rounded-5 border border-2 bg-white mb-3">
                    Change
                    Password
                </button>
                <a class="mb-3 text-black" asp-action="Login">
                    Login
                </a>
            </div>
        </form>
        <a class="mb-5 text-black" href="">Privacy Policy</a>
    </div>
</div>