@model IEnumerable<StudentCRUDWeb.Entities.ViewModels.StudentModel>
@{
    ViewData["Title"] = "Index Page";
}
<a asp-controller="Student" asp-action="Create">Add Student</a>
<table id="dtBasicExample" class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RollNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RollNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course)
                </td>
                <td>
                    <a asp-controller="Student" asp-action="Edit" asp-route-id="@item.RollNo" class="btn btn-primary mx-2">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>