@model CI_Project.Entities.ViewModels.UserModel

<div class="border-bottom border-2">
	<span class="heading-2 text-decoration-underline" style="text-underline-offset:10px;">Edit User</span>
</div>
<form id="editUserForm" class="container p-0 m-0 mt-4">
	<div class="row mt-4">
		<div class="col-6">
			<label>FirstName</label>
			<input type="text" asp-for="FirstName" class="p-2 rounded-3 border border-2 w-100" />
			<span class="text-danger" asp-validation-for="FirstName"></span>
		</div>
		<div class="col-6">
			<label>LastName</label>
			<input type="text" asp-for="LastName" class="p-2 rounded-3 border border-2 w-100" />
			<span class="text-danger" asp-validation-for="LastName"></span>
		</div>
	</div>
	
		<input hidden asp-for="UserId" />
	<div class="row mt-4">
		<div class="col-6">
			<label>Employee Id</label>
			<input asp-for="EmployeeId" type="number" class="p-2 rounded-3 border border-2 w-100" />
			<span class="text-danger" asp-validation-for="EmployeeId"></span>
		</div>
		<div class="col-6">
			<label>Department</label>
			<input asp-for="Department" type="text" class="p-2 rounded-3 border border-2 w-100" />
			<span class="text-danger" asp-validation-for="Department"></span>
		</div>
	</div>

	<div class="d-flex align-items-center justify-content-start mt-4">
		<button type="button" id="editUserCancelBtn" class="btn btn-outline-danger btn-lg rounded-pill me-3">Cancel</button>
		<button type="submit" class="btn btn-outline-warning btn-lg rounded-pill">Save Edited User</button>
	</div>
</form>

<partial name="_ValidationScriptsPartial"></partial>