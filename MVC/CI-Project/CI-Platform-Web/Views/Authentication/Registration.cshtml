            <div class="d-flex flex-column mb-4 mb-md-3">
                <label for="firstName">First Name</label>
                <input class="p-1" type="text" id="firstName" value="evan" placeholder="Email Address">
            </div>
            <div class="d-flex flex-column mb-4 mb-md-3">
                <label for="lastName">Last Name</label>
                <input class="p-1" type="text" id="lastName" value="donohue" placeholder="Last Name">
            </div>
            <div class="d-flex flex-column mb-4 mb-md-3">
                <label for="emailAddress">Email Address</label>
                <input class="p-1" type="email" id="emailAddress" value="evan.donohue@gmail.com"
                       placeholder="Email Address">
            </div>
            <div class="d-flex flex-column mb-4 mb-md-3">
                <label for="phoneNumber">Phone Number</label>
                <input class="p-1" type="tel" id="phoneNumber" value="8373828928" placeholder="Phone Number">
            </div>
            <div class="d-flex flex-column mb-4 mb-md-3">
                <label for="password">Password</label>
                <input class="p-1" type="password" id="password" value="123333333333" placeholder="Password">
            </div>
            <div class="d-flex flex-column mb-4 mb-md-3">
                <label for="confirmPassword">Confirm Password</label>
                <input class="p-1" type="password" id="confirmPassword" value="123333333333"
                       placeholder="Confirm Password">
            </div>
            <div class="d-flex flex-column align-items-center ">
                <button class="login-btn w-100 p-1 rounded-5 border border-2 bg-white mb-3">Register</button>
                <a class="mb-3 text-black" href="./forgotPassword.html">Lost your password?</a>
                <p class="d-flex d-sm-block align-items-center justify-content-center flex-column gap-2">
