@model CI_Project.Entities.ViewModels.UserModel

<div class="border-bottom border-2">
	<span class="heading-2 text-decoration-underline" style="text-underline-offset:10px;">Add User</span>
</div>
<form id="addUserForm" class="mt-4">
	<div class="row mt-4">
		<div class="col-sm-6 col-12">
			<label>FirstName</label>
			<input type="text" asp-for="FirstName" class="p-2 rounded-3 border border-2 w-100" />
			<span class="text-danger" asp-validation-for="FirstName"></span>
		</div>
		<div class="col-sm-6 col-12">
			<label>LastName</label>
			<input type="text" asp-for="LastName" class="p-2 rounded-3 border border-2 w-100" />
			<span class="text-danger" asp-validation-for="LastName"></span>
		</div>
	</div>
	<div class="row mt-4">
		<div class="col-sm-6 col-12">
			<label>EmailId</label>
			<input asp-for="EmailId" type="email" class="p-2 rounded-3 border border-2 w-100" autocomplete="off" />
			<span class="text-danger" asp-validation-for="EmailId"></span>
		</div>
		<div class="col-sm-6 col-12">
			<label>Password</label>
			<input asp-for="Password" type="password" class="p-2 rounded-3 border border-2 w-100" autocomplete="off" />
			<span class="text-danger" asp-validation-for="Password"></span>
		</div>
	</div>
	<div class="row mt-4">
		<div class="col-sm-6 col-12">
			<label>Employee Id</label>
			<input asp-for="EmployeeId" type="number" class="p-2 rounded-3 border border-2 w-100" />
			<span class="text-danger" asp-validation-for="EmployeeId"></span>
		</div>
		<div class="col-sm-6 col-12">
			<label>Department</label>
			<input asp-for="Department" type="text" class="p-2 rounded-3 border border-2 w-100" />
			<span class="text-danger" asp-validation-for="Department"></span>
		</div>
	</div>
	<div class="row mt-4">
		<div class="col-sm-6 col-12">
			<label>PhoneNo</label>
			<input asp-for="PhoneNo" type="tel" class="p-2 rounded-3 border border-2 w-100" />
			<span class="text-danger" asp-validation-for="PhoneNo"></span>
		</div>
	</div>
	<div class="d-flex align-items-center justify-content-end mt-4">
		<button type="button" id="addUserCancelBtn" class="btn btn-outline-danger btn-lg rounded-pill me-3">Cancel</button>
		<button type="submit" class="btn btn-outline-warning btn-lg rounded-pill">Save</button>
	</div>
</form>

<partial name="_ValidationScriptsPartial"></partial>