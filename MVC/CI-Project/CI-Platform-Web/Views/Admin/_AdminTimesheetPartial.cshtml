@model List<CI_Project.Entities.ViewModels.TimesheetModel>
<style>
	.table-overflow {
		width: 100%;
		white-space: nowrap;
		overflow-x: auto;
	}

	th {
		font-weight: 500;
		font-size: 1.25rem !important;
		padding: 1rem 1rem !important;
		background-color: #edeff6 !important;
	}

	.table thead > tr > th {
		border-bottom-color: #ced4da !important;
	}

	.table tbody > tr > td {
		padding-left: 1rem !important;
		padding-top: 0.75rem;
		padding-bottom: 0.75rem;
	}

</style>


<div>
	<div class="border-bottom border-2">
		<span class="heading-2 text-decoration-underline" style="text-underline-offset:10px;">Mission Timesheet</span>
	</div>
	<div class="p-0 m-0 mt-4">
		<div class="row">
			<div class="col-5">
				<div class=" h-100">
					<input id="adminSearch" type="text" placeholder="search" class="h-100 search-input rounded-3 border border-2 p-3" />
				</div>
			</div>
		</div>
		<div class="table-overflow">
			<table class="table mt-5 ">
				<thead>
					<tr>
						<th>Mission Title</th>
						<th>User Name</th>
						<th>Mission Type</th>
						<th>Note</th>
						<th>Action</th>
						<th>Time</th>
						<th>Date Volunteered</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					@if (Model.Where(timesheet => timesheet.Status.Equals("PENDING")).Count() <= 0)
					{
						<tr>
							<td colspan="100%">
								<div class="text-center">No entries found.</div>
							</td>
						</tr>
					}
					else
					{
						foreach (var currTimesheet in Model)
						{
							@if (currTimesheet.Status.Equals("PENDING"))
							{
								<tr>
									<td>@currTimesheet.Mission.Title</td>
									<td>@currTimesheet.User.FirstName @currTimesheet.User.LastName</td>
									<td>@currTimesheet.Mission.MissionType</td>
									@if (@currTimesheet.Notes != null)
									{
										<td>@currTimesheet.Notes</td>
									}
									else
									{
										<td>-</td>
									}
									@if (@currTimesheet.Action != null)
									{
										<td>@currTimesheet.Action</td>
									}
									else
									{
										<td>-</td>
									}
									@if (@currTimesheet.Time != null)
									{
										<td>@currTimesheet.Time</td>
									}
									else
									{
										<td>-</td>
									}
									<td>@currTimesheet.DateVolunteered.ToString("d")</td>
									<td>
										<div class="d-flex gap-2">
											<img src="~/images/check-circle.svg"
									 class="approveMissionTimesheetBtn cursor-pointer" alt="approve" height="20px" width="20px" data-missionTimesheetId="@currTimesheet.TimesheetId">

											<img src="~/images/x-circle.svg"
									 class="declineMissionTimesheetBtn cursor-pointer" alt="decline" height="20px" width="20px" data-missionTimesheetId="@currTimesheet.TimesheetId">
										</div>
									</td>
								</tr>
							}
						}
					}
				</tbody>
			</table>
		</div>
	</div>
	<div class="pagination c-pagination-item mt-2 d-flex justify-content-center justify-content-md-end gap-2" id="pagination-container">
	</div>
</div>

