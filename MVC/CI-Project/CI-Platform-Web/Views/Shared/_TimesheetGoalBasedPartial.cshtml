@model List<CI_Project.Entities.ViewModels.MissionTimesheetGoalModel>

<style>

	.ts-table {
		height: 300px;
	}

	table{
		width: 100%;
		white-space: nowrap;
		overflow-x: auto;
	}

	th,
	td {
		padding: 0 0.5rem;
		border-bottom: none !important;
	}

	th {
		padding-bottom: 0.5rem;
	}

	td {
		font-size: 15px;
		padding-top: 0.25rem !important;
		padding-bottom: 0.25rem !important;
	}

	table::-webkit-scrollbar{
		display:none;
	}
</style>

<div class="flex-basis-100 border shadow-sm p-3 py-md-4">
	<div class="d-flex justify-content-between align-items-center mb-3">
		<div class="fs-5 fw-light">Volunteering Goals</div>
		<button class="btn border border-2 border-warning text-warning rounded-pill d-flex gap-2 px-3" id="openGoalModalBtn">
			<span class="fw-bold">+</span> Add
		</button>
	</div>

	<div class="ts-table table-responsive">
		<table class="table">
			<thead>
				<tr>
					<th>Mission</th>
					<th>Date</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody class="fw-light">
				@if (Model.Count() == 0)
				{
					<tr>
						<td colspan="100%">
							<div class="text-center">No entries found.</div>
						</td>
					</tr>
				}
				@foreach (var currTimesheetData in Model)
				{
					<tr>
						<td>@currTimesheetData.MissionName</td>
						<td>@currTimesheetData.DateVolunteered?.ToString("d")</td>
						<td>@currTimesheetData.Action</td>
						@if (currTimesheetData.ApprovalStatus == "PENDING")
						{
							<td>
								<div class="d-flex gap-2">
									<img src="~/images/editing.png" class="editGoal cursor-pointer" alt="edit"
								 height="20px" width="20px" data-id="@currTimesheetData.TimesheetId">
									<img src="~/images/bin.png" class="deleteTimesheetDataBtn cursor-pointer" alt="bin" height="20px" width="20px"
								 data-id="@currTimesheetData.TimesheetId">
								</div>
							</td>
						}
						@if (currTimesheetData.ApprovalStatus == "APPROVED")
						{
							<td>
								<div class="d-flex gap-2">
									<img src="~/images/check-mark.svg" class="deleteTimesheetDataBtn" alt="bin" height="20px" width="20px"
								 data-id="@currTimesheetData.TimesheetId">
								</div>
							</td>
						}
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
