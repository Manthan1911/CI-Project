@model CI_Project.Entities.ViewModels.ContactUsModel

<div id="contactUsModal" class="modal" tabindex="-1">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header border-bottom-0">
				<h5 class="modal-title">Please input below Volunteering Hours</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<form id="contactUsForm" method="post">
				<input hidden asp-for="UserId" />
				<div class="modal-body">
					<div class="container px-2 mb-2">
						<div class="d-flex flex-column mb-3">
							<label>Name</label>
							<input type="text" disabled asp-for="UserName" class="px-2 py-1 rounded-3 border border-2 " style="background-color:lightgrey;" />
							<span class="text-danger" asp-validation-for="UserName"></span>
						</div>
						<div class="d-flex flex-column mb-3">
							<label>Email Address</label>
							<input asp-for="EmailAddress" disabled class="px-2 py-1 rounded-3 border border-2 " type="email" style="background-color:lightgrey;" />
							<span class="text-danger" asp-validation-for="EmailAddress"></span>
						</div>
						<div class="d-flex flex-column mb-3">
							<label>Subject</label>
							<input asp-for="Subject" class="px-2 py-1 rounded-3 border border-2 w-100" type="text" placeholder="Enter your Subject" />
							<span class="text-danger" asp-validation-for="Subject"></span>
						</div>
						<div class="d-flex flex-column mb-3">
							<label>Message</label>
							<textarea asp-for="Message" class="px-2 py-1 rounded-3 border border-2 " placeholder="Enter your message"></textarea>
							<span class="text-danger" asp-validation-for="Message"></span>
						</div>
					</div>
				</div>
					<div class="modal-footer border-top-0 d-flex justify-content-start">
					<button type="button" class="bg-transparent border border-2 border-danger text-danger rounded-pill py-2 px-3" data-bs-dismiss="modal">Cancel</button>
					<button type="submit" class="bg-transparent border border-2 border-warning text-warning rounded-pill py-2 px-3">Save</button>
				</div>
			</form>
		</div>
	</div>
</div>

<partial name="_ValidationScriptsPartial"></partial>