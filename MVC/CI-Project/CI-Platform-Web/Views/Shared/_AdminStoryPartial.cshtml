@model List<CI_Project.Entities.ViewModels.StoryModel>
<style>
	.table-overflow {
		width: 100%;
		white-space: nowrap;
		overflow-x: auto;
	}

	th {
		font-weight: 500;
		font-size: 1.25rem !important;
		padding: 1rem 1rem !important;
		background-color: #edeff6 !important;
	}

	.table thead > tr > th {
		border-bottom-color: #ced4da !important;
	}

	.table tbody > tr > td {
		padding-left: 1rem !important;
		padding-top: 0.75rem;
		padding-bottom: 0.75rem;
	}

</style>


<div>
	<div class="border-bottom border-2">
		<span class="heading-2 text-decoration-underline" style="text-underline-offset:10px;">Story</span>
	</div>
	<div class="p-0 m-0 mt-4">
		<div class="row">
			<div class="col-5">
				<div class=" h-100">
					<input id="adminSearch" type="text" placeholder="search" class="h-100 search-input rounded-3 border border-2 p-2" />
				</div>
			</div>
		</div>
		<div class="table-overflow">
			<table class="table mt-5 ">
				<thead>
					<tr>
						<th>Story Title</th>
						<th>User Name</th>
						<th>Mission Title</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					@if (Model.Count() == 0)
					{
						<tr>
							<td colspan="100%">
								<div class="text-center">No entries found.</div>
							</td>
						</tr>
					}
					else
					{
						foreach (var currStory in Model)
						{
							<tr>
								<td>@currStory.StoryTitle</td>
								<td>@currStory.User?.FirstName @currStory.User?.LastName</td>	
								<td>@currStory.Mission?.Title</td>	
								<td>
									@*----------- Active User --------*@
									@if (currStory.Status != null)
									{
										@if (currStory.Status.Equals(("Pending").ToUpper()))
										{
											<div class="d-flex justify-content-start align-items-center gap-2">
												<a type="button" asp-action="StoryPreview" asp-controller="Admin" asp-route-storyId="@currStory.StoryId" class="btn btn-outline-warning btn-sm rounded-pill">View</a>
												<img src="~/images/check-circle.svg"
									 class="approveStoryBtn cursor-pointer" alt="approve" height="20px" width="20px" data-storyId="@currStory.StoryId">
												<img src="~/images/x-circle.svg"
									 class="declineStoryBtn cursor-pointer" alt="decline" height="20px" width="20px" data-storyId="@currStory.StoryId">
											</div>
										}
										@*@if (currStory.Status.Equals(("Declined").ToUpper()))
										{
											<div class="d-flex gap-2">
												<img src="~/images/restore.svg" class="restoreUserBtn cursor-pointer" alt="bin" height="20px" width="20px"
									 data-restoreUserId="@currStory.UserId">
											</div>
										}*@
									}
								</td>
							</tr>
						}
					}
				</tbody>
			</table>

		</div>
	</div>

	<div class="pagination c-pagination-item mt-2 d-flex justify-content-center justify-content-md-end gap-2" id="pagination-container">
	</div>

</div>

